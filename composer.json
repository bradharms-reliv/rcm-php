{
  "name": "rcm/core",
  "description": "Reliv Content Management System",
  "type": "library",
  "license": "BSD-3-Clause",
  "keywords": [
    "reliv",
    "content",
    "manager",
    "module",
    "zf2"
  ],
  "homepage": "http://www.reliv.com/",
  "authors": [
    {
      "name": "Westin Shafer",
      "email": "wshafer@relivinc.com",
      "homepage": "http://www.reliv.com"
    },
    {
      "name": "Rod McNew",
      "email": "rmcnew@relivinc.com",
      "homepage": "http://www.reliv.com/"
    },
    {
      "name": "James Jervis",
      "email": "jjervis@relivinc.com",
      "homepage": "http://www.reliv.com/"
    },
    {
      "name": "Brian Janish",
      "email": "bjanish@relivinc.com",
      "homepage": "http://www.reliv.com/"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "container-interop/container-interop": "^1",
    "doctrine/doctrine-orm-module": "0.* || 1.*",
    "zendframework/zendframework": "2.*",
    "rwoverdijk/assetmanager": "1.*",
    "reliv/zf-config-factories": "3.* || 4.*",
    "rcm/user": "1.*",
    "rcm/api-lib": "0.*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.6.*",
    "squizlabs/php_codesniffer": "2.*"
  },
  "autoload": {
    "psr-4": {
      "Rcm\\": "src/"
    }
  },
  "suggest": {
    "rcm/core-js": "Provides basic JS including jQuery, AngularJS and Bootstrap"
  },
  "extra": {
    "asset-pattern-skip-version": "(-patch*)",
    "asset-installer-paths": {
      "bower-asset-library": "public/bower_components"
    }
  }
}
